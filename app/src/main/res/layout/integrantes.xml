        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:text="* FELIPE A. PINO BRIONES"
        android:orientation="vertical"
        android:textColor="#ffff"
        android:textSize="20sp"
        android:layout_below="@id/txt_integrantes"
        android:fontFamily="@font/harry_potter"
        />
    <TextView
        android:id="@+id/nom_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:text="* GONSALO A. GAJARDO MORA"
        android:textColor="#ffff"
        android:textSize="20sp"
        android:layout_below="@id/nom_1"
        android:fontFamily="@font/harry_potter"
        />
    <TextView
        android:id="@+id/nom_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:text="* RODRIGO M. MUÃ‘OZ SALAS"
        android:orientation="vertical"
        android:textColor="#ffff"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/nom_2"
        android:fontFamily="@font/harry_potter"
        />

</RelativeLayout>